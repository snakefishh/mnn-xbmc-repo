<?xml version="1.0" encoding="utf-8" standalone="yes"?>

<settings>
	<category label="Авторизация">
		<setting id="Aut_true"                           type="bool" default="false" visible="false"/>
		<setting id="Aut_type"     label="Способ Авторизации" type="enum"  values="Логин и Пароль|Authorization id" default="0"/>

		<setting id="User"         label="Логин"         type="text" default="" visible="eq(-1,0)"/>
		<setting id="password"     label="Пароль"        type="text" option="hidden" visible="eq(-2,0)" enable="!eq(-1,)" default="" />
		<setting id="Authorization_id"     label="Authorization id"  type="text" default="" visible="eq(-3,1)"/>

		 <setting type="sep"/>

		<setting label="[I][B]Вход по Логину[/B][/I]"   type="action"   visible="eq(-5,0)" enable="!eq(-3,)+!eq(-4,)" action="RunScript($CWD/default.py, authorization, login)" />
		<setting label="[I][B]Вход по ID[/B][/I]"   type="action"   visible="eq(-6,1)" enable="!eq(-3,)" action="RunScript($CWD/default.py, authorization, id)" />


	</category>

	<category label="Настройки">
		<setting id="novideo"          label="Не показывать сюжеты без Видео" type="bool" default="true" />
		<setting type="sep" />
		<setting id="live_quality"     label="Качество Эфир"  type="labelenum"  values="Спрашивать|Низкое качество|Среднее качество|Высокое качество|Автоматическое определение качества"  default="Автоматическое определение качества" />
		<setting id="archive_quality"  label="Качество Архив" type="labelenum"  values="Спрашивать|360p|480p|720p"  default="Спрашивать" />
	</category>

</settings>
